{
	"manifest_version":2,
	"name":"WPGP Tools",
	"version":"1.3",
	"description":"Tools for GP usage on WP",
	"permissions":[
		"activeTab",
		"tabs",
		"storage"
	],
	"web_accessible_resources": [
		"js/wp-gp-tools-checks.js",
		"js/wp-gp-tools-settings.js",
		"js/wp-gp-tools-functions.js",
		"js/wp-gp-tools-shortcuts.js",
		"img/warning.png",
		"img/notice.png"
	],
	"content_scripts":[
	{
		"matches":[
			"https://translate.wordpress.org/*"
		],
		"js":[
			"js/init.js",
			"js/jquery-3.6.0.min.js",
			"js/wp-gp-tools-consistency.js"
			],
		"css":[
			"css/wp-gp-tools-style.css"
		]
	}],
   	 "options_ui": {
   		 "page": "wpgpt-settings.html",
   		 "open_in_tab": false
  	},
	"icons": {
  		"16": "img/icon-16.png",
		"48": "img/icon-48.png",
		"64": "img/icon-128.png",
		"128": "img/icon-128.png"
   	 
  }
}